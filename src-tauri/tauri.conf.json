{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "pickem-vite",
  "version": "0.1.0",
  "identifier": "com.viles.pickem",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "title": "StarLadder Budapest Major Pick-em",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "plugins": { 
    "updater": {
      "endpoints": [
        "https://github.com/F1KSTER/PBM/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk2QTUzOUFBMTIxRDgxRjUKUldUMWdSMFNxam1sbG1hQnB0dFVZTzZQZk5ieVN0dmRyZWwrbzBaS1Z0VXIrUnhDUTR2TXhaazUK",
      "dialog": true,
      "active": true
    }
  },

  "bundle": { 
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}