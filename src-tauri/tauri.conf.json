{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "pickem-vite",
  "version": "0.1.0",
  "identifier": "com.viles.pickem",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "title": "StarLadder Budapest Major Pick-em",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "endpoints": [
        "https://github.com/F1KSTER/PBM/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFDNDI2MjgyQjMyNjlCQkQKUldTOW15YXpnbUpDck5xeGxlMS94cDBXVzhpTzBENWpLMFU0aXZoK3N1MitvSGw3Z1ZXdTJpb0MK",
      "dialog": true,
      "active": true
    }
  }
}